{
	"compilerOptions" : {
		"target"                 : "es5",
		"module"                 : "commonjs",
		"moduleResolution"       : "node",
		"sourceMap"              : true,
		"emitDecoratorMetadata"  : true,
		"experimentalDecorators" : true,
		"removeComments"         : false,
		"noImplicitAny"          : false,
		"outDir"                 : "AppProduction"
	},
	"exclude"         : [
		"node_modules",
		"/node_modules",
		"../node_modules",
		"*node_modules*",
		"/node_modules*",
		"angular2",
		"rxjs",
		"typings"
	]
}